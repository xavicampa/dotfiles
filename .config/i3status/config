general {
        colors = true
        interval = 1
}

order += "cpu_usage"
order += "cpu_temperature 1"
order += "cpu_temperature 0"
order += "memory"
order += "disk /"
order += "ethernet _first_"
order += "volume master"
order += "tztime local"

ethernet _first_{
        format_up = "%ip"
        format_down = "down"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

cpu_usage {
        format = "%usage"
}

disk "/" {
        format = "%free"
}

cpu_temperature 1 {
        format = "%degrees°C"
}

cpu_temperature 0 {
        format = "%degrees°C"
}

memory {
        format = "%used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

volume master {
        format = "Vol: %volume"
        format_muted = ""
}
